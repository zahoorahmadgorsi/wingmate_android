<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingEnd="@dimen/_20ssp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/leftcontainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="horizontal"
        android:layout_marginRight="@dimen/_50ssp"
        android:layout_marginLeft="@dimen/_10ssp"
        >
        <androidx.cardview.widget.CardView
            android:id="@+id/userPic"
            app:cardCornerRadius="@dimen/_10ssp"
            android:layout_width="@dimen/_40ssp"
            android:layout_height="@dimen/_40ssp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="@dimen/_3ssp"
            >
            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/left_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:padding="@dimen/_8ssp"
            android:text=""
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/purple_theme"
            android:fontFamily="@font/open_sans_regular"
            android:background="@drawable/left_chat_bubble_background"
            android:layout_gravity="start|center_vertical"
            android:elevation="@dimen/_1ssp"
            android:layout_marginLeft="@dimen/_10ssp"
            />
<!--        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:elevation="@dimen/_5ssp"
            android:layout_marginLeft="@dimen/_10ssp"
            android:background="@drawable/right_chat_bubble_background"
            >
            <TextView
                android:layout_gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:padding="@dimen/_8ssp"
                android:text="Zaki, is Love ❤"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/purple_theme"
                android:fontFamily="@font/open_sans_regular"
                android:background="@drawable/left_chat_bubble_background"
                />
        </androidx.cardview.widget.CardView>-->
    </LinearLayout>
    <TextView
        android:id="@+id/left_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#b9b9b9"
        android:textSize="@dimen/_10ssp"
        android:layout_marginLeft="@dimen/_50ssp"
        android:fontFamily="@font/open_sans_regular"
        app:layout_constraintStart_toStartOf="@+id/leftcontainer"
        app:layout_constraintTop_toBottomOf="@id/leftcontainer"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
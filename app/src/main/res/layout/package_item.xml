<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_4ssp"
    android:layout_marginBottom="@dimen/_4ssp">

    <RelativeLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_option_blue_background">
        <ImageView
            android:id="@+id/icon"
            android:layout_width="@dimen/_32ssp"
            android:layout_height="@dimen/_20ssp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/_5ssp"
            android:layout_marginBottom="@dimen/_5ssp"
            android:layout_marginStart="@dimen/_8ssp"
            android:layout_marginLeft="@dimen/_8ssp"
            android:scaleType="fitCenter"
            android:src="@drawable/flag_placeholder"
            android:visibility="gone" />

        <TextView
            android:id="@+id/package_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/icon"
            android:layout_toRightOf="@+id/icon"
            android:layout_centerVertical="true"
            android:fontFamily="@font/open_sans_semibold"
            android:gravity="start"
            android:paddingStart="@dimen/_12ssp"
            android:paddingLeft="@dimen/_12ssp"
            android:paddingTop="@dimen/_8ssp"
            android:paddingEnd="@dimen/_12ssp"
            android:paddingRight="@dimen/_12ssp"
            android:paddingBottom="@dimen/_8ssp"
            android:text=""
            android:textColor="@color/space_green"
            android:textSize="@dimen/label_txt_size" />

        <TextView
            android:id="@+id/rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/select_icon"
            android:layout_toLeftOf="@+id/select_icon"
            android:layout_centerVertical="true"
            android:fontFamily="@font/open_sans_regular"
            android:gravity="start"
            android:paddingStart="@dimen/_12ssp"
            android:paddingLeft="@dimen/_12ssp"
            android:paddingTop="@dimen/_8ssp"
            android:paddingBottom="@dimen/_8ssp"
            android:text="Free"
            android:textColor="@color/black_shade"
            android:textSize="@dimen/label_txt_size" />

        <ImageView
            android:id="@+id/select_icon"
            android:layout_width="@dimen/_32ssp"
            android:layout_height="@dimen/_20ssp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/_5ssp"
            android:layout_marginBottom="@dimen/_5ssp"
            android:layout_marginEnd="@dimen/_8ssp"
            android:layout_marginRight="@dimen/_8ssp"
            android:scaleType="fitCenter"
            android:src="@drawable/uncheck"
            android:visibility="visible" />
    </RelativeLayout>
</RelativeLayout>
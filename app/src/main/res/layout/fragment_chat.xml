<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.ChatFragment"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        >
        <ImageView
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="@dimen/_25ssp"
            android:layout_marginTop="@dimen/_30ssp"
            />
        <TextView
            android:id="@+id/username"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/back"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Marvin McKinney"
            android:fontFamily="@font/baloo_regular"
            android:textColor="@color/purple_theme"
            android:textSize="@dimen/_20ssp"
            android:layout_marginTop="@dimen/_25ssp"
            android:layout_marginLeft="@dimen/_20ssp"
            android:ellipsize="end"
            android:maxLines="1"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/topLayout">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/chat_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/messagesList"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/messageLayout"
            />

        <androidx.cardview.widget.CardView
            android:id="@+id/messageLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginLeft="@dimen/_16ssp"
            android:layout_marginRight="@dimen/_16ssp"
            android:layout_marginBottom="@dimen/_30ssp"
            app:cardCornerRadius="@dimen/_10ssp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <EditText
                    android:id="@+id/message"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@+id/sendBtn"
                    android:background="@null"
                    android:fontFamily="@font/open_sans_regular"
                    android:hint="Type something"
                    android:layout_centerVertical="true"
                    android:maxHeight="@dimen/_100ssp"
                    android:paddingLeft="@dimen/_16ssp"
                    android:paddingTop="@dimen/_12ssp"
                    android:paddingRight="@dimen/_12ssp"
                    android:paddingBottom="@dimen/_12ssp"
                    android:text=""
                    android:textSize="@dimen/_13ssp" />
                <androidx.cardview.widget.CardView
                    android:id="@+id/sendBtn"
                    android:layout_width="@dimen/_40ssp"
                    android:layout_height="@dimen/_40ssp"
                    app:cardCornerRadius="@dimen/_8ssp"
                    android:layout_marginRight="@dimen/_5ssp"
                    android:layout_marginTop="@dimen/_6ssp"
                    android:layout_marginBottom="@dimen/_6ssp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    >
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/purple_theme">
                        <ImageView
                            android:layout_width="@dimen/_25ssp"
                            android:layout_height="@dimen/_20ssp"
                            android:layout_gravity="center"
                            android:src="@drawable/send_icon"
                            />
                    </FrameLayout>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_view"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3.5"
            android:background="@drawable/rounded_bottom_orange" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6.5" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_view"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_8ssp"
                app:cardBackgroundColor="@color/grey_mid"
                app:cardCornerRadius="@dimen/_12ssp"
                app:cardElevation="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/pic_1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/image_placeholder" />
                </RelativeLayout>


            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="@dimen/_40ssp"
                android:layout_height="@dimen/_40ssp"
                android:layout_marginLeft="@dimen/_16ssp"
                android:layout_marginStart="@dimen/_16ssp"
                android:layout_marginTop="@dimen/_16ssp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:padding="@dimen/_10ssp"
                android:background="@drawable/circle_bg"
                android:src="@drawable/ic_back_btn"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/_16ssp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/video_card"
                    android:layout_width="@dimen/_48ssp"
                    android:layout_height="@dimen/_48ssp"
                    app:cardBackgroundColor="@color/grey_mid"
                    app:cardCornerRadius="@dimen/_8ssp"
                    app:cardElevation="0dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/video_1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:cropToPadding="true"
                            android:src="@drawable/video_placeholder1"
                            android:scaleType="centerCrop" />

                        <ImageView
                            android:layout_width="@dimen/_16ssp"
                            android:layout_height="@dimen/_16ssp"
                            android:src="@drawable/play_video"
                            android:layout_centerInParent="true" />
                    </RelativeLayout>



                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/pic2_card"
                    android:layout_width="@dimen/_48ssp"
                    android:layout_height="@dimen/_48ssp"
                    app:cardBackgroundColor="@color/grey_mid"
                    android:layout_marginTop="@dimen/_8ssp"
                    app:cardCornerRadius="@dimen/_8ssp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:id="@+id/pic_2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"/>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/pic3_card"
                    android:layout_width="@dimen/_48ssp"
                    android:layout_height="@dimen/_48ssp"
                    android:layout_marginTop="@dimen/_8ssp"
                    app:cardBackgroundColor="@color/grey_mid"
                    app:cardCornerRadius="@dimen/_8ssp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:id="@+id/pic_3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"/>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_2ssp"
                android:paddingBottom="@dimen/_2ssp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/_8ssp"
                android:layout_marginEnd="@dimen/_8ssp"
                android:layout_marginLeft="@dimen/_8ssp"
                android:layout_marginStart="@dimen/_8ssp"
                android:layout_marginRight="@dimen/_8ssp"
                android:background="@drawable/round_bottom_black_trans">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="@dimen/_12ssp"
                    android:layout_marginLeft="@dimen/_12ssp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true">

                    <TextView
                        android:id="@+id/name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/baloo_regular"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="@dimen/header_size" />

                    <TextView
                        android:id="@+id/distance_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/open_sans_regular"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="@dimen/label_txt_size" />

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/match_view"
                    android:layout_width="@dimen/_60ssp"
                    android:layout_height="@dimen/_60ssp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:visibility="gone"
                    android:layout_alignParentRight="true">

                    <me.tankery.lib.circularseekbar.CircularSeekBar
                        android:id="@+id/match_progress"
                        android:layout_width="@dimen/_48ssp"
                        android:layout_height="@dimen/_48ssp"
                        android:layout_centerInParent="true"
                        app:cs_progress = "2"
                        app:cs_max = "5"
                        app:cs_circle_x_radius = "@dimen/_48ssp"
                        app:cs_circle_y_radius = "@dimen/_48ssp"
                        app:cs_negative_enabled = "false"
                        app:cs_move_outside_circle = "false"
                        app:cs_maintain_equal_circle = "false"
                        app:cs_use_custom_radii = "false"
                        app:cs_lock_enabled = "true"
                        app:cs_circle_stroke_width = "@dimen/_2ssp"
                        app:cs_disable_pointer = "true"
                        app:cs_circle_fill = "@color/transparent"
                        app:cs_circle_color = "@color/grey"
                        app:cs_circle_progress_color = "@color/white"
                        app:cs_disable_progress_glow = "true"
                        app:cs_hide_progress_when_empty = "true"/>

                    <TextView
                        android:id="@+id/match_percent_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/baloo_regular"
                        android:text=""
                        android:gravity="center"
                        android:layout_centerInParent="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/txt_size" />
                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/profile_options_rv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            tools:listitem="@layout/list_item_profile" />

<!--        <ScrollView-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="0dp"-->
<!--            android:layout_weight="5">-->

<!--            <LinearLayout-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:orientation="vertical">-->

<!--                <androidx.recyclerview.widget.RecyclerView-->
<!--                    android:id="@+id/profile_options_rv"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:nestedScrollingEnabled="false"-->
<!--                    tools:listitem="@layout/list_item_profile" />-->

<!--                <TextView-->
<!--                    android:id="@+id/about_tv"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:paddingLeft="@dimen/_12ssp"-->
<!--                    android:paddingStart="@dimen/_12ssp"-->
<!--                    android:paddingRight="@dimen/_12ssp"-->
<!--                    android:paddingEnd="@dimen/_12ssp"-->
<!--                    android:paddingTop="@dimen/_4ssp"-->
<!--                    android:paddingBottom="@dimen/_12ssp"-->
<!--                    android:fontFamily="@font/open_sans_regular"-->
<!--                    android:gravity="start"-->
<!--                    android:textColor="@color/text_black_color"-->
<!--                    android:textSize="@dimen/txt_size" />-->
<!--            </LinearLayout>-->

<!--        </ScrollView>-->

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_edit"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/_10ssp"
            android:layout_marginLeft="@dimen/_10ssp"
            android:layout_marginTop="@dimen/_8ssp"
            android:layout_marginEnd="@dimen/_5ssp"
            android:layout_marginRight="@dimen/_5ssp"
            android:layout_marginBottom="@dimen/_8ssp"
            android:background="@drawable/button_pressed"
            android:fontFamily="@font/baloo_regular"
            android:text="Edit Profile"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_size" />

        <Button
            android:id="@+id/btn_edit_media"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/_5ssp"
            android:layout_marginLeft="@dimen/_5ssp"
            android:layout_marginTop="@dimen/_8ssp"
            android:layout_marginEnd="@dimen/_10ssp"
            android:layout_marginRight="@dimen/_10ssp"
            android:layout_marginBottom="@dimen/_8ssp"
            android:background="@drawable/button_pressed"
            android:fontFamily="@font/baloo_regular"
            android:text="Edit Visual Media"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_size" />
    </LinearLayout>

</RelativeLayout>
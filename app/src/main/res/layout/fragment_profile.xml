<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_view"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4.5"
            android:background="@drawable/rounded_bottom_orange" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5.5" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_view"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5.5">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_8ssp"
                app:cardBackgroundColor="@color/grey_mid"
                app:cardCornerRadius="@dimen/_12ssp"
                app:cardElevation="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/pic_1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/image_placeholder" />
                </RelativeLayout>


            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="@dimen/_32ssp"
                android:layout_height="@dimen/_32ssp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="@dimen/_16ssp"
                android:layout_marginLeft="@dimen/_16ssp"
                android:layout_marginTop="@dimen/_16ssp"
                android:background="@drawable/circle_bg"
                android:padding="@dimen/_8ssp"
                android:src="@drawable/ic_back_btn" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/_16ssp"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/video_card"
                    android:layout_width="@dimen/_40ssp"
                    android:layout_height="@dimen/_40ssp"
                    app:cardBackgroundColor="@color/grey_mid"
                    app:cardCornerRadius="@dimen/_8ssp"
                    app:cardElevation="0dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/video_1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:cropToPadding="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/video_placeholder1" />

                        <ImageView
                            android:layout_width="@dimen/_16ssp"
                            android:layout_height="@dimen/_16ssp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/play_video" />
                    </RelativeLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/pic2_card"
                    android:layout_width="@dimen/_40ssp"
                    android:layout_height="@dimen/_40ssp"
                    android:layout_marginTop="@dimen/_8ssp"
                    app:cardBackgroundColor="@color/grey_mid"
                    app:cardCornerRadius="@dimen/_8ssp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:id="@+id/pic_2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/pic3_card"
                    android:layout_width="@dimen/_40ssp"
                    android:layout_height="@dimen/_40ssp"
                    android:layout_marginTop="@dimen/_8ssp"
                    app:cardBackgroundColor="@color/grey_mid"
                    app:cardCornerRadius="@dimen/_8ssp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:id="@+id/pic_3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="@dimen/_8ssp"
                android:layout_marginLeft="@dimen/_8ssp"
                android:layout_marginEnd="@dimen/_8ssp"
                android:layout_marginRight="@dimen/_8ssp"
                android:layout_marginBottom="@dimen/_8ssp"
                android:background="@drawable/round_bottom_black_trans"
                android:paddingTop="@dimen/_2ssp"
                android:paddingBottom="@dimen/_4ssp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_12ssp"
                    android:layout_marginLeft="@dimen/_12ssp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/baloo_regular"
                        android:textColor="@color/white"
                        android:textSize="@dimen/header_size" />

                    <TextView
                        android:id="@+id/distance_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/open_sans_regular"
                        android:layout_marginBottom="@dimen/_4ssp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/small_label_txt_size" />

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/match_view"
                    android:layout_width="@dimen/_48ssp"
                    android:layout_height="@dimen/_48ssp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:visibility="gone">

                    <me.tankery.lib.circularseekbar.CircularSeekBar
                        android:id="@+id/match_progress"
                        android:layout_width="@dimen/_40ssp"
                        android:layout_height="@dimen/_40ssp"
                        android:layout_centerInParent="true"
                        app:cs_circle_color="@color/grey"
                        app:cs_circle_fill="@color/transparent"
                        app:cs_circle_progress_color="@color/white"
                        app:cs_circle_stroke_width="@dimen/_2ssp"
                        app:cs_circle_x_radius="@dimen/_48ssp"
                        app:cs_circle_y_radius="@dimen/_48ssp"
                        app:cs_disable_pointer="true"
                        app:cs_disable_progress_glow="true"
                        app:cs_hide_progress_when_empty="true"
                        app:cs_lock_enabled="true"
                        app:cs_maintain_equal_circle="false"
                        app:cs_max="100"
                        app:cs_move_outside_circle="false"
                        app:cs_negative_enabled="false"
                        app:cs_progress="0"
                        app:cs_use_custom_radii="false" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/match_percent_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/baloo_regular"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/white"
                            android:textSize="@dimen/label_txt_size" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/baloo_regular"
                            android:gravity="center"
                            android:text="Match"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_6ssp" />
                    </LinearLayout>
                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/profile_options_rv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4.5"
            tools:listitem="@layout/list_item_profile" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/bottom_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/others_buttons_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/_8ssp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btn_may_be"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/_48ssp"
                    android:src="@drawable/profile_maybe" />

                <ImageView
                    android:id="@+id/btn_like"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/_48ssp"
                    android:layout_marginLeft="@dimen/_12ssp"
                    android:layout_marginStart="@dimen/_12ssp"
                    android:src="@drawable/profile_like" />

                <ImageView
                    android:id="@+id/btn_crush"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/_48ssp"
                    android:layout_marginLeft="@dimen/_12ssp"
                    android:layout_marginStart="@dimen/_12ssp"
                    android:src="@drawable/profile_crush" />

                <ImageView
                    android:id="@+id/btn_msg"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/_48ssp"
                    android:layout_marginLeft="@dimen/_12ssp"
                    android:layout_marginStart="@dimen/_12ssp"
                    android:src="@drawable/profile_msg" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_refresh"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_16ssp"
                    android:layout_height="@dimen/_16ssp"
                    android:src="@drawable/icon_refresh" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans_regular"
                    android:gravity="center"
                    android:layout_marginStart="@dimen/_8ssp"
                    android:layout_marginLeft="@dimen/_8ssp"
                    android:text="Refresh"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/title_size" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/edit_bottom_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_edit"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height"
                android:layout_marginStart="@dimen/_10ssp"
                android:layout_marginLeft="@dimen/_10ssp"
                android:layout_marginTop="@dimen/_8ssp"
                android:layout_marginEnd="@dimen/_5ssp"
                android:layout_marginRight="@dimen/_5ssp"
                android:layout_marginBottom="@dimen/_8ssp"
                android:layout_weight="1"
                android:background="@drawable/button_pressed"
                android:fontFamily="@font/baloo_regular"
                android:text="Edit Profile"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_size" />

            <Button
                android:id="@+id/btn_edit_media"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height"
                android:layout_marginStart="@dimen/_5ssp"
                android:layout_marginLeft="@dimen/_5ssp"
                android:layout_marginTop="@dimen/_8ssp"
                android:layout_marginEnd="@dimen/_10ssp"
                android:layout_marginRight="@dimen/_10ssp"
                android:layout_marginBottom="@dimen/_8ssp"
                android:layout_weight="1"
                android:background="@drawable/button_pressed"
                android:fontFamily="@font/baloo_regular"
                android:text="Edit Media"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_size" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
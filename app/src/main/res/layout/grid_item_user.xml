<?xml version="1.0" encoding="utf-8"?>
<com.app.wingmate.widgets.MyLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@color/grey_light"
        android:layout_margin="@dimen/_4ssp"
        app:cardCornerRadius="@dimen/_12ssp"
        app:cardElevation="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/user_pic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/half_overlay" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/bottom_view">

                <TextView
                    android:id="@+id/age_loc_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_margin="@dimen/_8ssp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:fontFamily="@font/open_sans_semibold"
                    android:textSize="@dimen/label_txt_size"
                    android:textColor="@color/white" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/bottom_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/grey_light"
                android:clipToPadding="true"
                android:padding="@dimen/_8ssp">

                <TextView
                    android:id="@+id/match_percent_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@+id/loc_icon"
                    android:layout_toLeftOf="@+id/loc_icon"
                    android:text=""
                    android:singleLine="true"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:fontFamily="@font/open_sans_semibold"
                    android:textSize="@dimen/small_label_txt_size"
                    android:textColor="@color/text_color" />

                <ImageView
                    android:id="@+id/loc_icon"
                    android:layout_width="@dimen/_10ssp"
                    android:layout_height="@dimen/_10ssp"
                    android:src="@drawable/location_icon"
                    android:layout_marginStart="@dimen/_8ssp"
                    android:layout_marginLeft="@dimen/_8ssp"
                    android:layout_marginRight="@dimen/_2ssp"
                    android:layout_marginEnd="@dimen/_2ssp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/distance_tv"
                    android:layout_toStartOf="@+id/distance_tv" />

                <TextView
                    android:id="@+id/distance_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:fontFamily="@font/open_sans_regular"
                    android:textSize="@dimen/small_label_txt_size"
                    android:textColor="@color/text_color" />
            </RelativeLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</com.app.wingmate.widgets.MyLinearLayout>
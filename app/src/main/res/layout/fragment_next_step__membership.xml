<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_view"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/_30ssp"
                android:paddingTop="@dimen/_10ssp"
                android:paddingRight="@dimen/_30ssp"
                >
                <ImageView
                    android:id="@+id/step_one_icon"
                    android:layout_width="@dimen/_50ssp"
                    android:layout_height="@dimen/_50ssp"
                    android:src="@drawable/step_one"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    />
                <TextView
                    android:id="@+id/step_one_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Answer mandatory\nquestions"
                    android:textSize="@dimen/_13ssp"
                    android:layout_marginLeft="@dimen/_20ssp"
                    android:gravity="left"
                    android:layout_toRightOf="@+id/step_one_icon"
                    android:fontFamily="@font/baloo_regular"
                    android:textColor="@color/purple_theme"
                    android:layout_marginTop="@dimen/_12ssp"
                    />
                <TextView
                    android:id="@+id/stepone_subTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="(5 questions/ 2min.)"
                    android:textSize="@dimen/_10ssp"
                    android:layout_marginLeft="@dimen/_20ssp"
                    android:fontFamily="@font/open_sans_regular"
                    android:textColor="@color/dark_blue"
                    android:layout_below="@+id/step_one_title"
                    android:layout_toRightOf="@+id/step_one_icon"
                    />
                <ImageView
                    android:layout_width="@dimen/_8ssp"
                    android:layout_height="@dimen/_18ssp"
                    android:src="@drawable/bar"
                    android:layout_below="@+id/step_one_icon"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/_21ssp"
                    android:layout_marginTop="@dimen/_8ssp"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/_30ssp"
                android:paddingRight="@dimen/_30ssp"
                >
                <ImageView
                    android:id="@+id/step_two_icon"
                    android:layout_width="@dimen/_50ssp"
                    android:layout_height="@dimen/_50ssp"
                    android:src="@drawable/step_two"

                    android:layout_alignParentLeft="true"
                    />
                <TextView
                    android:id="@+id/step_two_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Answer mandatory\nquestions"
                    android:textSize="@dimen/_13ssp"
                    android:layout_marginLeft="@dimen/_20ssp"
                    android:gravity="left"
                    android:layout_toRightOf="@+id/step_two_icon"
                    android:fontFamily="@font/baloo_regular"
                    android:textColor="@color/purple_theme"
                    android:layout_marginTop="@dimen/_2ssp"
                    />
                <TextView
                    android:id="@+id/steptwo_subTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="(5 questions/ 2min.)"
                    android:textSize="@dimen/_10ssp"
                    android:layout_marginLeft="@dimen/_20ssp"
                    android:fontFamily="@font/open_sans_regular"
                    android:textColor="@color/dark_blue"
                    android:layout_below="@+id/step_two_title"
                    android:layout_toRightOf="@+id/step_two_icon"
                    />
                <ImageView
                    android:layout_width="@dimen/_8ssp"
                    android:layout_height="@dimen/_18ssp"
                    android:src="@drawable/bar"
                    android:layout_below="@+id/step_two_icon"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/_21ssp"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/stepthree_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/_30ssp"
                android:paddingRight="@dimen/_30ssp"
                >
                <ImageView
                    android:id="@+id/step_three_icon"
                    android:layout_width="@dimen/_50ssp"
                    android:layout_height="@dimen/_50ssp"
                    android:src="@drawable/step_three"
                    android:layout_alignParentLeft="true"
                    />
                <TextView
                    android:id="@+id/step_three_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ready for action!"
                    android:textSize="@dimen/_13ssp"
                    android:layout_marginLeft="@dimen/_20ssp"
                    android:gravity="left"
                    android:layout_toRightOf="@+id/step_three_icon"
                    android:fontFamily="@font/baloo_regular"
                    android:textColor="@color/purple_theme"
                    android:layout_marginTop="@dimen/_12ssp"
                    />
                <ImageView
                    android:layout_width="@dimen/_8ssp"
                    android:layout_height="@dimen/_18ssp"
                    android:src="@drawable/bar"
                    android:layout_below="@+id/step_three_icon"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/_21ssp"
                    />
            </RelativeLayout>
            <TextView
                android:id="@+id/membership_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_regular"
                android:layout_marginTop="@dimen/_25ssp"
                android:paddingLeft="@dimen/_27ssp"
                android:paddingRight="@dimen/_40ssp"
                android:text="@string/next_step_payment"
                android:textColor="@color/dark_blue"
                android:textSize="@dimen/_12ssp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


    <LinearLayout
        android:id="@+id/bottom_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_continue"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_marginStart="@dimen/_40ssp"
            android:layout_marginLeft="@dimen/_40ssp"
            android:layout_marginTop="@dimen/_16ssp"
            android:layout_marginEnd="@dimen/_40ssp"
            android:layout_marginRight="@dimen/_40ssp"
            android:layout_marginBottom="@dimen/_40ssp"
            android:background="@drawable/button_pressed"
            android:fontFamily="@font/baloo_regular"
            android:text="@string/txt_continue"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_size" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/que_end_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/purple_theme"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/btn_1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img1"
                android:layout_width="wrap_content"
                android:layout_height="150dp" />

            <TextView
                android:id="@+id/txt1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16ssp"
                android:layout_marginLeft="@dimen/_16ssp"
                android:layout_marginTop="@dimen/_24ssp"
                android:layout_marginEnd="@dimen/_16ssp"
                android:layout_marginRight="@dimen/_16ssp"
                android:fontFamily="@font/baloo_regular"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/header_size" />

            <TextView
                android:id="@+id/txt2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16ssp"
                android:layout_marginLeft="@dimen/_16ssp"
                android:layout_marginTop="@dimen/_16ssp"
                android:layout_marginEnd="@dimen/_16ssp"
                android:layout_marginRight="@dimen/_16ssp"
                android:fontFamily="@font/open_sans_regular"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/label_txt_size" />


        </LinearLayout>

        <Button
            android:id="@+id/btn_1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_above="@+id/btn_skip"
            android:layout_marginStart="@dimen/_40ssp"
            android:layout_marginLeft="@dimen/_40ssp"
            android:layout_marginTop="@dimen/_16ssp"
            android:layout_marginEnd="@dimen/_40ssp"
            android:layout_marginRight="@dimen/_40ssp"
            android:layout_marginBottom="@dimen/_1ssp"
            android:background="@drawable/button_pressed_grey"
            android:fontFamily="@font/baloo_regular"
            android:onClick="onClick"
            android:text="Continue"
            android:textAllCaps="false"
            android:textColor="@color/text_color"
            android:textSize="@dimen/txt_size" />

        <TextView
            android:id="@+id/btn_skip"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40ssp"
            android:layout_alignParentBottom="true"
            android:onClick="onClick"
            android:paddingTop="@dimen/_12ssp"
            android:paddingBottom="@dimen/_12ssp"
            android:fontFamily="@font/open_sans_regular"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/label_txt_size"
            android:text="SKIP" />

    </RelativeLayout>


</RelativeLayout>
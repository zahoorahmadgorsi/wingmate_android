<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_bottom_orange"
        android:padding="@dimen/_16ssp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_img"
            android:layout_width="@dimen/_60ssp"
            android:layout_height="@dimen/_60ssp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/image_placeholder"
            app:civ_border_width="0dp"
            app:civ_border_color="@color/white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60ssp"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_toEndOf="@+id/profile_img"
            android:layout_toRightOf="@+id/profile_img"
            android:layout_marginStart="@dimen/_8ssp"
            android:layout_marginLeft="@dimen/_8ssp"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/header_size"
                android:fontFamily="@font/baloo_regular"
                android:maxLines="2"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/logout"
            android:layout_width="@dimen/_28ssp"
            android:layout_height="@dimen/_28ssp"
            android:onClick="onClick"
            android:visibility="invisible"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_lock" />

    </RelativeLayout>

    <HorizontalScrollView
        android:id="@+id/filters_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_view">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_8ssp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_semibold"
                android:background="@drawable/custom_select"
                android:text="All"
                android:onClick="onClick"
                android:paddingLeft="@dimen/_8ssp"
                android:paddingEnd="@dimen/_8ssp"
                android:paddingTop="@dimen/_4ssp"
                android:paddingBottom="@dimen/_4ssp"
                android:paddingRight="@dimen/_8ssp"
                android:paddingStart="@dimen/_8ssp"
                android:textColor="@drawable/custom_text_color"
                android:textSize="@dimen/title_size" />

            <TextView
                android:id="@+id/group_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_semibold"
                android:background="@drawable/custom_select"
                android:text="Group A"
                android:onClick="onClick"
                android:layout_marginStart="@dimen/_16ssp"
                android:layout_marginLeft="@dimen/_16ssp"
                android:paddingLeft="@dimen/_8ssp"
                android:paddingEnd="@dimen/_8ssp"
                android:paddingTop="@dimen/_4ssp"
                android:paddingBottom="@dimen/_4ssp"
                android:paddingRight="@dimen/_8ssp"
                android:paddingStart="@dimen/_8ssp"
                android:textColor="@drawable/custom_text_color"
                android:textSize="@dimen/title_size" />


            <TextView
                android:id="@+id/group_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:layout_marginStart="@dimen/_16ssp"
                android:layout_marginLeft="@dimen/_16ssp"
                android:background="@drawable/custom_select"
                android:fontFamily="@font/open_sans_semibold"
                android:paddingStart="@dimen/_8ssp"
                android:paddingLeft="@dimen/_8ssp"
                android:paddingTop="@dimen/_4ssp"
                android:paddingEnd="@dimen/_8ssp"
                android:paddingRight="@dimen/_8ssp"
                android:paddingBottom="@dimen/_4ssp"
                android:text="Group B"
                android:textColor="@drawable/custom_text_color"
                android:textSize="@dimen/title_size" />

            <TextView
                android:id="@+id/new_req"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_semibold"
                android:background="@drawable/custom_select"
                android:text="New Requests"
                android:onClick="onClick"
                android:layout_marginStart="@dimen/_16ssp"
                android:layout_marginLeft="@dimen/_16ssp"
                android:paddingLeft="@dimen/_8ssp"
                android:paddingEnd="@dimen/_8ssp"
                android:paddingTop="@dimen/_4ssp"
                android:paddingBottom="@dimen/_4ssp"
                android:paddingRight="@dimen/_8ssp"
                android:paddingStart="@dimen/_8ssp"
                android:textColor="@drawable/custom_text_color"
                android:textSize="@dimen/title_size" />

            <TextView
                android:id="@+id/rejected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_semibold"
                android:background="@drawable/custom_select"
                android:text="Rejected"
                android:onClick="onClick"
                android:layout_marginStart="@dimen/_16ssp"
                android:layout_marginLeft="@dimen/_16ssp"
                android:paddingLeft="@dimen/_8ssp"
                android:paddingEnd="@dimen/_8ssp"
                android:paddingTop="@dimen/_4ssp"
                android:paddingBottom="@dimen/_4ssp"
                android:paddingRight="@dimen/_8ssp"
                android:paddingStart="@dimen/_8ssp"
                android:textColor="@drawable/custom_text_color"
                android:textSize="@dimen/title_size" />
        </LinearLayout>
    </HorizontalScrollView>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/pullToRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/filters_view">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            tools:listitem="@layout/grid_item_user_new"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/_8ssp"
            android:paddingStart="@dimen/_12ssp"
            android:paddingLeft="@dimen/_12ssp"
            android:paddingEnd="@dimen/_12ssp"
            android:paddingRight="@dimen/_12ssp" />

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <LinearLayout
        android:id="@+id/empty_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="@dimen/_100ssp"
            android:layout_height="@dimen/_100ssp"
            android:src="@drawable/no_results"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans_regular"
            android:gravity="center"
            android:text="@string/try_later"
            android:textColor="@color/text_color_grey"
            android:textSize="@dimen/label_txt_size"
            android:visibility="visible" />
    </LinearLayout>

</RelativeLayout>
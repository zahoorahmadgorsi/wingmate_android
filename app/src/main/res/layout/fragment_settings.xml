<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/itemsList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
            </androidx.recyclerview.widget.RecyclerView>


            <Button
                android:id="@+id/buy_btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_marginStart="@dimen/_40ssp"
                android:layout_marginLeft="@dimen/_40ssp"
                android:layout_marginEnd="@dimen/_40ssp"
                android:layout_marginRight="@dimen/_40ssp"
                android:layout_marginBottom="@dimen/_16ssp"
                android:background="@drawable/button_pressed"
                android:fontFamily="@font/baloo_regular"
                android:text="Pay Now"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_size"
                android:visibility="gone" />

            <Button
                android:id="@+id/logout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="@dimen/_16ssp"
                android:layout_marginTop="@dimen/_25ssp"
                android:background="@drawable/button_pressed"
                android:fontFamily="@font/baloo_regular"
                android:text="Logout"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:visibility="gone"
                android:textSize="@dimen/txt_size" />

            <TextView
               android:id="@+id/version_tv"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Version: 1.0.0"
               android:textSize="@dimen/label_txt_size"
               android:fontFamily="@font/open_sans_regular"
               android:textColor="@color/text_color_grey"
               android:layout_gravity="center"
               android:layout_marginTop="@dimen/_10ssp"
               android:layout_marginBottom="@dimen/_25ssp"
                android:visibility="gone"
               />

            <Button
                android:id="@+id/questionnaire_mandatory"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_marginStart="@dimen/_40ssp"
                android:layout_marginLeft="@dimen/_40ssp"
                android:layout_marginTop="@dimen/_8ssp"
                android:layout_marginEnd="@dimen/_40ssp"
                android:layout_marginRight="@dimen/_40ssp"
                android:layout_marginBottom="@dimen/_8ssp"
                android:background="@drawable/button_pressed"
                android:fontFamily="@font/baloo_regular"
                android:text="Mandatory Questionnaire"
                android:textAllCaps="false"

                android:textColor="@color/white"
                android:textSize="@dimen/txt_size"
                android:visibility="gone" />

            <Button
                android:id="@+id/questionnaire_optional"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_marginStart="@dimen/_40ssp"
                android:layout_marginLeft="@dimen/_40ssp"
                android:layout_marginTop="@dimen/_8ssp"
                android:layout_marginEnd="@dimen/_40ssp"
                android:layout_marginRight="@dimen/_40ssp"
                android:layout_marginBottom="@dimen/_8ssp"
                android:background="@drawable/button_pressed"
                android:fontFamily="@font/baloo_regular"
                android:text="Optional Questionnaire"
                android:textAllCaps="false"

                android:textColor="@color/white"
                android:textSize="@dimen/txt_size"
                android:visibility="gone" />

            <Button
                android:id="@+id/profile_photo_video"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_marginStart="@dimen/_40ssp"
                android:layout_marginLeft="@dimen/_40ssp"
                android:layout_marginEnd="@dimen/_40ssp"
                android:layout_marginRight="@dimen/_40ssp"
                android:layout_marginBottom="@dimen/_8ssp"
                android:background="@drawable/button_pressed"
                android:fontFamily="@font/baloo_regular"
                android:text="Profile"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_size"
                android:visibility="gone" />

            <Button
                android:id="@+id/admin_btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_marginStart="@dimen/_40ssp"
                android:layout_marginLeft="@dimen/_40ssp"
                android:layout_marginEnd="@dimen/_40ssp"
                android:layout_marginRight="@dimen/_40ssp"
                android:background="@drawable/button_pressed"
                android:fontFamily="@font/baloo_regular"
                android:text="Go To Admin Section"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_size"
                android:visibility="gone" />

        </LinearLayout>

    </ScrollView>
</FrameLayout>
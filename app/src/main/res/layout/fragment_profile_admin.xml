<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_view"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4.5"
            android:background="@drawable/rounded_bottom_orange" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5.5" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_view"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5.5">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_8ssp"
                app:cardBackgroundColor="@color/grey_mid"
                app:cardCornerRadius="@dimen/_12ssp"
                app:cardElevation="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/pic_1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/image_placeholder" />
                </RelativeLayout>


            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="@dimen/_32ssp"
                android:layout_height="@dimen/_32ssp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="@dimen/_16ssp"
                android:layout_marginLeft="@dimen/_16ssp"
                android:layout_marginTop="@dimen/_16ssp"
                android:background="@drawable/circle_bg"
                android:padding="@dimen/_8ssp"
                android:src="@drawable/ic_back_btn" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/_16ssp"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/video_card"
                    android:layout_width="@dimen/_40ssp"
                    android:layout_height="@dimen/_40ssp"
                    app:cardBackgroundColor="@color/grey_mid"
                    app:cardCornerRadius="@dimen/_8ssp"
                    app:cardElevation="0dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/video_1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:cropToPadding="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/video_placeholder1" />

                        <ImageView
                            android:layout_width="@dimen/_16ssp"
                            android:layout_height="@dimen/_16ssp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/play_video" />
                    </RelativeLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/pic2_card"
                    android:layout_width="@dimen/_40ssp"
                    android:layout_height="@dimen/_40ssp"
                    android:layout_marginTop="@dimen/_8ssp"
                    app:cardBackgroundColor="@color/grey_mid"
                    app:cardCornerRadius="@dimen/_8ssp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:id="@+id/pic_2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/pic3_card"
                    android:layout_width="@dimen/_40ssp"
                    android:layout_height="@dimen/_40ssp"
                    android:layout_marginTop="@dimen/_8ssp"
                    app:cardBackgroundColor="@color/grey_mid"
                    app:cardCornerRadius="@dimen/_8ssp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:id="@+id/pic_3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="@dimen/_8ssp"
                android:layout_marginLeft="@dimen/_8ssp"
                android:layout_marginEnd="@dimen/_8ssp"
                android:layout_marginRight="@dimen/_8ssp"
                android:layout_marginBottom="@dimen/_8ssp"
                android:background="@drawable/round_bottom_black_trans"
                android:paddingTop="@dimen/_2ssp"
                android:paddingBottom="@dimen/_4ssp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_12ssp"
                    android:layout_marginLeft="@dimen/_12ssp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/baloo_regular"
                        android:textColor="@color/white"
                        android:textSize="@dimen/header_size" />

                    <TextView
                        android:id="@+id/distance_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_4ssp"
                        android:fontFamily="@font/open_sans_regular"
                        android:textColor="@color/white"
                        android:textSize="@dimen/small_label_txt_size" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_12ssp"
                    android:layout_marginRight="@dimen/_12ssp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/open_sans_semibold"
                        android:text=""
                        android:layout_gravity="center_vertical|end"
                        android:paddingLeft="@dimen/_4ssp"
                        android:paddingEnd="@dimen/_4ssp"
                        android:paddingTop="@dimen/_2ssp"
                        android:paddingBottom="@dimen/_2ssp"
                        android:paddingRight="@dimen/_4ssp"
                        android:paddingStart="@dimen/_4ssp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/very_extra_small_txt_size" />

                    <TextView
                        android:id="@+id/tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/open_sans_semibold"
                        android:text=""
                        android:layout_gravity="center_vertical|end"
                        android:layout_marginTop="@dimen/_4ssp"
                        android:paddingLeft="@dimen/_4ssp"
                        android:paddingEnd="@dimen/_4ssp"
                        android:paddingTop="@dimen/_2ssp"
                        android:paddingBottom="@dimen/_2ssp"
                        android:paddingRight="@dimen/_4ssp"
                        android:paddingStart="@dimen/_4ssp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/very_extra_small_txt_size" />

                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/profile_options_rv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4.5"
            tools:listitem="@layout/list_item_profile" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/bottom_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_group_a"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height"
                android:layout_marginStart="@dimen/_10ssp"
                android:layout_marginLeft="@dimen/_10ssp"
                android:layout_marginTop="@dimen/_8ssp"
                android:layout_marginEnd="@dimen/_5ssp"
                android:layout_marginRight="@dimen/_5ssp"
                android:layout_marginBottom="@dimen/_8ssp"
                android:layout_weight="1"
                android:onClick="onClick"
                android:background="@drawable/button_pressed"
                android:fontFamily="@font/baloo_regular"
                android:text="Group A"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_size" />

            <Button
                android:id="@+id/btn_group_b"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height"
                android:layout_marginStart="@dimen/_5ssp"
                android:layout_marginLeft="@dimen/_5ssp"
                android:layout_marginTop="@dimen/_8ssp"
                android:layout_marginEnd="@dimen/_10ssp"
                android:layout_marginRight="@dimen/_10ssp"
                android:layout_marginBottom="@dimen/_8ssp"
                android:layout_weight="1"
                android:onClick="onClick"
                android:background="@drawable/button_pressed"
                android:fontFamily="@font/baloo_regular"
                android:text="Group B"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_size" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_reject"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_marginStart="@dimen/_10ssp"
            android:layout_marginLeft="@dimen/_10ssp"
            android:layout_marginTop="@dimen/_1ssp"
            android:layout_marginEnd="@dimen/_10ssp"
            android:layout_marginRight="@dimen/_10ssp"
            android:layout_marginBottom="@dimen/_8ssp"
            android:layout_weight="1"
            android:onClick="onClick"
            android:background="@drawable/button_pressed_primary"
            android:fontFamily="@font/baloo_regular"
            android:text="Reject"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_size" />
    </LinearLayout>

</RelativeLayout>
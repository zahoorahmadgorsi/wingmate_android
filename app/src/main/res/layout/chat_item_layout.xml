<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_70ssp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/chat_item_background"
    android:layout_marginBottom="@dimen/_5ssp">
<androidx.cardview.widget.CardView
    android:id="@+id/userPic"
    app:cardCornerRadius="@dimen/_10ssp"
    android:layout_width="@dimen/_55ssp"
    android:layout_height="@dimen/_55ssp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginStart="@dimen/_3ssp"
    >
    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/user"
        />
</androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2 MIN"
        android:textSize="@dimen/_10ssp"
        android:layout_marginRight="@dimen/_10ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:fontFamily="@font/open_sans_regular"
        android:textColor="#BBC0C9"
        />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jane Cooper"
        app:layout_constraintTop_toTopOf="@id/userPic"
        app:layout_constraintStart_toEndOf="@id/userPic"
        android:fontFamily="@font/open_sans_regular"
        android:textSize="@dimen/_14ssp"
        android:textColor="@color/dark_blue"
        android:layout_marginTop="@dimen/_10ssp"
        android:layout_marginStart="@dimen/_8ssp"
        />

    <TextView
        android:id="@+id/last_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:text="Hi, Dude"
        android:fontFamily="@font/open_sans_regular"
        android:textColor="#BBC0C9"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintEnd_toStartOf="@+id/time"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/user_name"
        app:layout_constraintTop_toBottomOf="@+id/user_name" />
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_60ssp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/chat_item_background"
    android:layout_marginBottom="@dimen/_5ssp">
<androidx.cardview.widget.CardView
    android:id="@+id/userPic"
    app:cardCornerRadius="@dimen/_10ssp"
    android:layout_width="@dimen/_45ssp"
    android:layout_height="@dimen/_45ssp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginStart="@dimen/_3ssp"
    >
    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        />
</androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/user_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8ssp"
        android:layout_marginTop="@dimen/_4ssp"
        android:layout_marginEnd="8dp"
        android:ellipsize="end"
        android:fontFamily="@font/open_sans_semibold"
        android:maxLines="1"
        android:text=""
        android:textStyle="bold"
        android:textColor="@color/dark_blue"
        android:textSize="@dimen/_14ssp"
        app:layout_constraintEnd_toStartOf="@+id/endLayout"
        app:layout_constraintStart_toEndOf="@id/userPic"
        app:layout_constraintTop_toTopOf="@id/userPic" />

    <TextView
        android:id="@+id/last_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:text=""
        android:maxLines="1"
        android:ellipsize="end"
        android:fontFamily="@font/open_sans_regular"
        android:textColor="#BBC0C9"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintEnd_toStartOf="@+id/endLayout"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/user_name"
        app:layout_constraintTop_toBottomOf="@+id/user_name" />

    <LinearLayout
        android:id="@+id/endLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical|end"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="@dimen/_8ssp"
        >
        <TextView
            android:id="@+id/unread"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Message"
            android:textSize="@dimen/_10ssp"
            android:textColor="@color/red"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/time"
            android:visibility="gone"
            >
        </TextView>
        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/_10ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:fontFamily="@font/open_sans_semibold"
            android:textColor="#BBC0C9"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.app.wingmate.widgets.NonSwappableViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/_50ssp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/bottom_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:elevation="@dimen/_4ssp"
            app:cardCornerRadius="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/btn_home"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/_8ssp">

                    <ImageView
                        android:id="@+id/ic_home"
                        android:layout_width="@dimen/_24ssp"
                        android:layout_height="@dimen/_24ssp"
                        android:padding="@dimen/_4ssp"
                        android:src="@drawable/tab_home"
                        app:tint="@color/grey" />

                    <TextView
                        android:id="@+id/tv_home"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/open_sans_regular"
                        android:text="Home"
                        android:textSize="@dimen/extra_small_txt_size" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_search"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/_8ssp">

                    <ImageView
                        android:id="@+id/ic_search"
                        android:layout_width="@dimen/_24ssp"
                        android:layout_height="@dimen/_24ssp"
                        android:padding="@dimen/_4ssp"
                        android:src="@drawable/tab_search"

                        app:tint="@color/grey" />

                    <TextView
                        android:id="@+id/tv_search"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/open_sans_regular"
                        android:text="Search"
                        android:textSize="@dimen/extra_small_txt_size" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_fan"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/_8ssp">

                    <ImageView
                        android:id="@+id/ic_fan"
                        android:layout_width="@dimen/_24ssp"
                        android:layout_height="@dimen/_24ssp"
                        android:padding="@dimen/_4ssp"
                        android:src="@drawable/tab_like"

                        app:tint="@color/grey" />

                    <TextView
                        android:id="@+id/tv_fan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/open_sans_regular"
                        android:text="Likes"
                        android:textSize="@dimen/extra_small_txt_size" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_msg"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/_8ssp">

                    <ImageView
                        android:id="@+id/ic_msg"
                        android:layout_width="@dimen/_24ssp"
                        android:layout_height="@dimen/_24ssp"
                        android:padding="@dimen/_4ssp"
                        android:src="@drawable/tab_message"

                        app:tint="@color/grey" />

                    <TextView
                        android:id="@+id/tv_msg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/open_sans_regular"
                        android:text="Messages"
                        android:textSize="@dimen/extra_small_txt_size" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_settings"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/_8ssp">

                    <ImageView
                        android:id="@+id/ic_settings"
                        android:layout_width="@dimen/_24ssp"
                        android:layout_height="@dimen/_24ssp"
                        android:padding="@dimen/_4ssp"
                        android:src="@drawable/tab_settings"
                        app:tint="@color/grey" />

                    <TextView
                        android:id="@+id/tv_settings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/open_sans_regular"
                        android:text="Settings"
                        android:textSize="@dimen/extra_small_txt_size" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:background="@color/white"
            android:visibility="gone"
            app:elevation="@dimen/_8ssp"
            app:itemTextAppearanceActive="@style/BottomNavigationView.Active"
            app:itemTextAppearanceInactive="@style/BottomNavigationView"
            app:labelVisibilityMode="labeled"
            app:menu="@menu/bottom_navigation_menu" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/pending_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/purple_theme"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/btn_logout"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:src="@drawable/thanks_photos_video" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16ssp"
                android:layout_marginLeft="@dimen/_16ssp"
                android:layout_marginTop="@dimen/_24ssp"
                android:layout_marginEnd="@dimen/_16ssp"
                android:layout_marginRight="@dimen/_16ssp"
                android:fontFamily="@font/baloo_regular"
                android:gravity="center"
                android:text="@string/please_wait"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_size" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16ssp"
                android:layout_marginLeft="@dimen/_16ssp"
                android:layout_marginTop="@dimen/_8ssp"
                android:layout_marginEnd="@dimen/_16ssp"
                android:layout_marginRight="@dimen/_16ssp"
                android:fontFamily="@font/open_sans_regular"
                android:gravity="center"
                android:text="@string/pending_msg"
                android:textColor="@color/white"
                android:textSize="@dimen/label_txt_size" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_logout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/_40ssp"
            android:layout_marginLeft="@dimen/_40ssp"
            android:layout_marginTop="@dimen/_16ssp"
            android:layout_marginEnd="@dimen/_40ssp"
            android:layout_marginRight="@dimen/_40ssp"
            android:layout_marginBottom="@dimen/_16ssp"
            android:background="@drawable/button_pressed_grey"
            android:fontFamily="@font/baloo_regular"
            android:onClick="onClick"
            android:text="Logout"
            android:textAllCaps="false"
            android:textColor="@color/text_color"
            android:textSize="@dimen/txt_size" />

    </RelativeLayout>

</RelativeLayout>
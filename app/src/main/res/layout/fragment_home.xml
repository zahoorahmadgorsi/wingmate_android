<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple_theme"
        android:padding="@dimen/_16ssp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toStartOf="@+id/profile_img"
            android:layout_toLeftOf="@+id/profile_img"
            android:layout_marginEnd="@dimen/_8ssp"
            android:layout_marginRight="@dimen/_8ssp"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/qoute_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You will face many defeats in life, but never let yourself be defeated."
                android:textColor="@color/white"
                android:textSize="@dimen/small_label_txt_size"
                android:fontFamily="@font/open_sans_regular"
                android:maxLines="2"/>

            <TextView
                android:id="@+id/author_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8ssp"
                android:text="Maya Angelou"
                android:textColor="@color/white"
                android:textSize="@dimen/extra_small_txt_size"
                android:fontFamily="@font/open_sans_semibold_italic"
                android:maxLines="1"/>
        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_img"
            android:layout_width="@dimen/_60ssp"
            android:layout_height="@dimen/_60ssp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentRight="true"
            app:civ_border_width="@dimen/_1ssp"
            app:civ_border_color="@color/white"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/top_buttons_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_view"
        android:gravity="center"
        android:paddingTop="@dimen/_8ssp"
        android:paddingBottom="@dimen/_8ssp"
        android:paddingLeft="@dimen/_16ssp"
        android:paddingStart="@dimen/_16ssp"
        android:paddingRight="@dimen/_16ssp"
        android:paddingEnd="@dimen/_16ssp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_top_fans"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/_48ssp"
            android:src="@drawable/my_fans" />

        <ImageView
            android:id="@+id/btn_top_search"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/_48ssp"
            android:layout_marginLeft="@dimen/_12ssp"
            android:layout_marginStart="@dimen/_12ssp"
            android:src="@drawable/search" />

        <ImageView
            android:id="@+id/btn_top_msg"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/_48ssp"
            android:layout_marginLeft="@dimen/_12ssp"
            android:layout_marginStart="@dimen/_12ssp"
            android:src="@drawable/messages" />

        <ImageView
            android:id="@+id/btn_top_compatibility"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/_48ssp"
            android:layout_marginLeft="@dimen/_12ssp"
            android:layout_marginStart="@dimen/_12ssp"
            android:src="@drawable/compatibility" />

    </LinearLayout>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/pullToRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top_buttons_view">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            tools:listitem="@layout/grid_item_user"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="@dimen/_12ssp"
            android:paddingLeft="@dimen/_12ssp"
            android:paddingEnd="@dimen/_12ssp"
            android:paddingRight="@dimen/_12ssp" />

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <LinearLayout
        android:id="@+id/empty_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="@dimen/_100ssp"
            android:layout_height="@dimen/_100ssp"
            android:src="@drawable/no_results"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans_regular"
            android:gravity="center"
            android:text="@string/try_later"
            android:textColor="@color/text_color_grey"
            android:textSize="@dimen/label_txt_size"
            android:visibility="visible" />
    </LinearLayout>

</RelativeLayout>
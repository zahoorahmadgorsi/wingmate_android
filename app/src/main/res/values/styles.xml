<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>


<!--        <item name="android:windowActionBarOverlay">true</item>-->
<!--        <item name="android:windowFullscreen">false</item>-->
<!--        <item name="android:windowContentOverlay">@null</item>-->
<!--        <item name="android:windowIsTranslucent">true</item>-->
        <item name="android:windowDisablePreview">true</item>

    </style>

    <style name="AppTheme_Material" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
<!--        <item name="colorPrimary">@color/colorPrimary</item>-->
        <item name="colorPrimary">@color/transparent</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/_16ssp</item>
    </style>

    <style name="customMaterialDialogUpDown" parent="Theme.MaterialComponents">
        <item name="android:windowAnimationStyle">@style/customDialogAnimation1</item>
        <item name="android:windowMinWidthMajor">97%</item>
        <item name="android:windowMinWidthMinor">97%</item>
    </style>

    <style name="customDialogUpDown" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/customDialogAnimation1</item>
        <item name="android:windowMinWidthMajor">97%</item>
        <item name="android:windowMinWidthMinor">97%</item>
    </style>

    <style name="customDialogAnimation1">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_out_down</item>
        <!--<item name="android:windowExitAnimation">@anim/slide_out_down</item>-->
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up_2</item>
        <item name="android:windowExitAnimation">@anim/slide_out_down_2</item>
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>

    </style>

    <style name="DialogSlideAnim" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>

    <style name="PauseDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/PauseDialogAnimation</item>
    </style>

    <style name="PauseDialogBounce" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/PauseDialogBounceAnimation</item>
    </style>

    <style name="PauseDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/zoom_in</item>
        <item name="android:windowExitAnimation">@anim/zoom_out</item>
        <item name="android:windowMinWidthMajor">95%</item>
        <item name="android:windowMinWidthMinor">95%</item>
    </style>

    <style name="PauseDialogBounceAnimation">
        <item name="android:windowEnterAnimation">@anim/zoon_in_bounce</item>
        <item name="android:windowExitAnimation">@anim/zoom_out</item>
        <item name="android:windowMinWidthMajor">95%</item>
        <item name="android:windowMinWidthMinor">95%</item>
    </style>

    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/small_label_txt_size</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>

    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/small_label_txt_size</item>
        <item name="android:textColor">@color/purple_theme</item>
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>

    </style>

</resources>
